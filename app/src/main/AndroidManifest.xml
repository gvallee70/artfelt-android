<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artfelt.artfelt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_artfelt_logo"
        android:label="@string/TITLE_APP_NAME"
        android:roundIcon="@mipmap/ic_artfelt_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArtFelt"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        >
        <activity android:name="signin.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="signup.SignUpActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>